	"item": [
		{
			"name": "List Users",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Status 200', function () { pm.response.to.have.status(200); });",
							"pm.test('Returns array', function () { pm.expect(pm.response.json()).to.be.an('array'); });"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "X-API-KEY",
						"value": "{{apiKey}}"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/users",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"users"
					]
				}
			},
			"response": []
		},
		{
			"name": "Create User",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Status 201', function () { pm.response.to.have.status(201); });",
							"const data = pm.response.json();",
							"pm.test('Has id', function () { pm.expect(data).to.have.property('id'); });",
							"pm.collectionVariables.set('userId', String(data.id));",
							"pm.environment.set('userId', String(data.id));"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "X-API-KEY",
						"value": "{{apiKey}}"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"name\": \"Postman User\",\n  \"email\": \"postman-{{$timestamp}}@example.com\",\n  \"password\": \"secret123\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/api/users",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"users"
					]
				}
			},
			"response": []
		},
		{
			"name": "Get User by ID",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Status 200', function () { pm.response.to.have.status(200); });",
							"const data = pm.response.json();",
							"pm.test('Matches requested id', function () { pm.expect(String(data.id)).to.eql(pm.variables.get('userId')); });"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "X-API-KEY",
						"value": "{{apiKey}}"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/users/{{userId}}",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"users",
						"{{userId}}"
					]
				}
			},
			"response": []
